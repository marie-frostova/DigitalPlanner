@model DigitalPlanner.Models.LogInModel
 
<form asp-action="LogIn" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div style="width: 300px; margin-top: 0px">
        <h2 style="height: 15px">Log In</h2>

        <div class="form-group">
          <label asp-for="Username" class="col-form-label mt-4" for="username">Username:</label>
          <input type="text" asp-for="Username" class="form-control" placeholder="Enter username" id="username">
          <span asp-validation-for="Username" />
        </div>

        <div class="form-group">
          <label asp-for="Password" class="col-form-label mt-4" for="pass">Password:</label>
          <input type="text" asp-for="Password" class="form-control" placeholder="Enter password" id="pass">
          <span asp-validation-for="Password" />
        </div>
        
        <div class="form-group" style= "margin-top: 20px; margin-bottom: 10px">
            <button type="submit" class="btn btn-secondary">Log In</button>
        </div>
    </div>
</form>

<p style= "margin-top: 10px; margin-bottom: 10px">If you still don't have a DigitalPlanner acccount, Sign Up!</p>
<a type="button" style= "margin-bottom: 10px" class="btn btn-secondary" asp-action="SignUp" asp-controller="Account">Sign Up</a>