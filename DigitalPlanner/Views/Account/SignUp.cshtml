@model DigitalPlanner.Models.SignUpModel

<form asp-action="SignUp" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div style="width: 300px; margin-top: 0px">
        <h2 style="height: 15px">Sign Up</h2>

        <div class="form-group">
          <label asp-for="Username" class="col-form-label mt-4" for="username">Username:</label>
          <input type="text" asp-for="Username" class="form-control" placeholder="Enter username" id="username">
          <span asp-validation-for="Username" />
        </div>

        <div class="form-group">
          <label asp-for="Password" class="col-form-label mt-4" for="pass">Password:</label>
          <input type="text" asp-for="Password" class="form-control" placeholder="Enter password" id="pass">
          <span asp-validation-for="Password" />
        </div>
        
        <div class="form-group">
          <label asp-for="ConfirmPassword" class="col-form-label mt-4" for="pass">Confirm password:</label>
          <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Enter password again" id="pass">
          <span asp-validation-for="ConfirmPassword" />
        </div>

        <div class="form-group" style= "margin-top: 20px; margin-bottom: 10px">
            <button type="submit" class="btn btn-secondary">Sign Up</button>
        </div>
    </div>
</form>